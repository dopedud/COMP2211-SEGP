<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import uk.ac.soton.comp2211.team33.components.IconView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <Label AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" textAlignment="CENTER" wrapText="true">
        Please set up a new airport, or select an existing one.
        Alternatively, you can import an airport configuration from a file.
    </Label>
    <HBox AnchorPane.topAnchor="100" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" alignment="CENTER">
        <IconView icon="/pictures/logo.png" iconSize="140" />
    </HBox>
    <HBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" alignment="CENTER">
        <Button text="Configure New" onAction="#configureNew" />
        <Button text="Select Existing" onAction="#selectAirportFromList" />
        <Button text="Import from file" onAction="#importAirportFromFile" />
    </HBox>
</AnchorPane>
