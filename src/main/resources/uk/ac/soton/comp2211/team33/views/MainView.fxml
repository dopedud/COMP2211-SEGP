<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="600" prefHeight="600" minWidth="600" prefWidth="800"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <MenuBar VBox.vgrow="NEVER">
    <Menu text="File">
      <MenuItem text="Change Airport..." onAction="#onChangeAirport"/>
      <MenuItem text="New Runway..." onAction="#onNewRunway"/>
      <SeparatorMenuItem />
      <MenuItem text="Import..." onAction="#onImport"/>
      <MenuItem text="Export..." onAction="#onExport"/>
      <SeparatorMenuItem />
      <MenuItem text="Quit"/>
    </Menu>
    <Menu text="Help">
      <MenuItem text="About..."/>
    </Menu>
  </MenuBar>
  <TabPane fx:id="runwayTabs" tabMaxHeight="20.0" tabMaxWidth="100.0" VBox.vgrow="ALWAYS"/>
</VBox>
