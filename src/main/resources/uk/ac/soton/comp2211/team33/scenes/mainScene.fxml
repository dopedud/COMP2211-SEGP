<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.canvas.Canvas?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="960.0" prefWidth="1280.0" stylesheets="@../css/mainScene.css">

  <columnConstraints>
    <ColumnConstraints percentWidth="66.6666" />
    <ColumnConstraints percentWidth="33.3334" />
  </columnConstraints>

  <rowConstraints>
    <RowConstraints />
    <RowConstraints percentHeight="50" />
    <RowConstraints percentHeight="50" />
  </rowConstraints>

  <TabPane fx:id="tabPanel"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"
           GridPane.rowIndex="0"
           GridPane.rowSpan="1"
           tabClosingPolicy="UNAVAILABLE" />

  <VBox styleClass="panel, right-panel"
        GridPane.columnIndex="1"
        GridPane.columnSpan="1"
        GridPane.rowIndex="1"
        GridPane.rowSpan="2">
  </VBox>

  <HBox
        styleClass="panel, bottom-panel"
        GridPane.columnIndex="0"
        GridPane.columnSpan="1"
        GridPane.rowIndex="2"
        GridPane.rowSpan="1"
        spacing="40">
    <VBox spacing="4">
      <HBox spacing="4">
        <Button text="Add obstacle" onAction="#handleAddObstacle" />
        <Button text="Load predefined obstacles" onAction="#handleLoadPredefinedObstacles" />
      </HBox>
      <ListView fx:id="obstaclesList" />
    </VBox>
    <VBox spacing="4">
      <Button text="Add aircraft" onAction="#handleAddAircraft" />
      <ListView fx:id="aircraftList" />
    </VBox>

    <Button fx:id="addNewRunwayButton" text="Add new runway" onAction="#handleAddRunway" />
  </HBox>

  <VBox fx:id="canvasPanel"
        GridPane.columnIndex="0"
        GridPane.columnSpan="1"
        GridPane.rowIndex="1"
        GridPane.rowSpan="1">
    <Canvas fx:id="canvas" />
  </VBox>
</GridPane>
